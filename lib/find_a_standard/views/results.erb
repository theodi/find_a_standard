<h1><%= @title %></h1>

<% if @query %>
  <p>You searched for '<%= @query %>'</p>
<% end %>

<% @results.each do |r| %>

  <h2><a href="<%= r.url %>"><%= r.title %></a></h2>
  <p class="lead"><%= r.description %></p>

  <p><%= r.body %></p>

  <% r.keywords.each do |t| %>
    <span class='tag tag-primary'><a href="/tag/<%= t %>"><%= t %></a></span>
  <% end %>

  <hr />

<% end %>
